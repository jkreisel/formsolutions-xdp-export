{
    "manifest_version": 2,
  
    "name": "Formsolutions â†’ XDP Exporter",
    "version": "0.1",
    "description": "Liest Panels aus dem Formsolutions-Designer und erstellt eine XDP-Datei.",
  
    "permissions": [
      "activeTab",
      "downloads",
      "storage"          
    ],
  
    "background": {
      "scripts": ["background.js"]      
    },
  
    "browser_action": {                
      "default_popup": "popup.html"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],      
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  